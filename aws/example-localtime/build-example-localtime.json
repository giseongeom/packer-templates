{
  "variables": {
    "aws_access_key": "{{env `_MY_AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `_MY_AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `_MY_AWS_DEFAULT_REGION`}}",
    "aws_ec2_type": "c4.large",
    "aws_ec2_user": "ec2-user",
    "build_date_locatime": "{{env `_MY_AWS_BUILD_DATE_LOCALTIME`}}",
    "tags_env": "lab",
    "tags_os": "Amazon Linux AMI (HVM), SSD Volume Type"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "instance_type": "{{user `aws_ec2_type`}}",
      "ssh_username": "{{user `aws_ec2_user`}}",
      "ami_name": "ami-UTC-{{isotime \"2006.01.02-1504\" | clean_ami_name}}--vs--LOCAL-{{user `build_date_locatime`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "amzn-ami-hvm-*",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "owners": [
          "amazon"
        ],
        "most_recent": true
      },
      "tags": {
        "Env": "{{user `tags_env`}}",
        "OS": "{{user `tags_os`}}"
      },
      "user_data_file": "../user_data/user_data_amaznlinux.txt"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum -y -q install cowsay lolcat",
        "sudo cowsay `uname -a` | lolcat"
      ]
    }
  ]
}